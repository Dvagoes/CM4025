<!DOCTYPE html>
<html>

<head>
    <title>Justice for Ugly Animals - Home</title>
    <link rel="stylesheet" type="text/css" href="./stylesheets/post.css">
</head>

<body>
    <%- include('./partials/header') %>
        <div id="post-wall">
            <% posts.forEach((post)=> {%>
                <div class="post-container">
                    <div class="post-image-container">
                        <img class="post-image" src=<%=post.img_name %>>
                    </div>
                    <div class="post-info">
                        <div class="post-user">
                            <%= post.username %>
                        </div>
                        <div class="post-title">
                            <%= post.post_title %>
                        </div>
                    </div>
                    <div class="post-footer">
                        <div class="post-score" onclick="add_score()">
                            <%= post.score %>
                        </div>
                        <div class="post-date">
                            <%= post.datetime %>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>

        <div class="post-button" onclick="add_post()">
            <a class="plus"></a>
        </div>

        <% if (loggedin) {%>
            <% include('./partials/userInfo')%>
                <% } else {%>
                    <% include('./partials/loginPane')%>
                        <%- include('./partials/footer') %>

</body>

</html>