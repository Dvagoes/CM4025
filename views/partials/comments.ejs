<link rel="stylesheet" type="text/css" href="./stylesheets/comment.css">
<div class="comment-container">
    <div id="comment-wall">
        <% comments = post.comments %>
        <% comments.forEach((comment)=> {%>
            <div class="comment-container">
                <div class="comment-content">
                    <div class="comment-user">
                        User: <%= comment.username %>
                    </div>
                    <div class="comment-text">
                        Title: <%= comment.content %>
                    </div>
                </div>
                <div class="comment-footer">
                    <div class="comment-date">
                        <% date = new Date(comment.datetime) %>
                        Posted: <%= date.toLocaleDateString() %>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
        <form action="/addComment/<%=post._id%>" method="post">
            <input type="text" name="comment" placeholder="Comment" id="commentBox" required>
            <input type="submit" value="Post">
        </form>
</div>